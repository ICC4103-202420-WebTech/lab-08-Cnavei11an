<h1>Mis Sesiones de Entrenamiento</h1>

<%= link_to 'Nueva Sesión', new_workout_session_path, class: 'btn btn-primary mb-3' %>

<table class="table">
  <thead>
    <tr>
      <th>Fecha</th>
      <th>Actividad</th>
      <th>Duración (min)</th>
      <th>Descripción</th>
      <th>Acciones</th>
    </tr>
  </thead>
  <tbody>
    <% @workout_sessions.each do |session| %>
      <tr>
        <td><%= session.date %></td>
        <td><%= session.activity %></td>
        <td><%= session.duration %></td>
        <td><%= session.description %></td>
        <td>
          <%= link_to 'Editar', edit_workout_session_path(session), class: 'btn btn-secondary' %>
          <%= link_to 'Eliminar', workout_session_path(session), method: :delete, data: { confirm: '¿Estás seguro?' }, class: 'btn btn-danger' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
